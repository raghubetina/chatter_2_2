<%= search_form_for @q, :class => collapse_search_form, :id => "posts_filters" do |f| %>
  <p class="lead">Narrow results:</p>

  <div class="form-group">
    <%= f.label :body_cont, "Body contains" %>
    <%= f.text_field :body_cont, :class => "form-control", :placeholder => "Body contains" %>
  </div>

  <div class="form-group">
    <%= f.label :created_at, "Created at" %>
    <div class="row">
      <div class='col-md-6 mb-1'>
        <div class='input-group date' id='created_atgteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_gteq, :class => "form-control datetimepicker-input", :placeholder => "Created at greater than or equal to", :data => {:target => '#created_atgteqPicker'} %>
          <div class="input-group-append" data-target='#created_atgteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>

      <div class='col-md-6'>
        <div class='input-group date' id='created_atlteqPicker' data-target-input="nearest">
          <%= f.text_field :created_at_lteq, :class => "form-control datetimepicker-input", :placeholder => "Created at less than or equal to", :data => {:target => '#created_atlteqPicker'} %>
          <div class="input-group-append" data-target='#created_atlteqPicker' data-toggle="datetimepicker">
            <div class="input-group-text"><i class="fa fa-calendar"></i></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script type="text/javascript">
      $(function () {
          $('#created_atgteqPicker').datetimepicker({
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atlteqPicker').datetimepicker({
              useCurrent: false,
              format: 'YYYY-MM-DD hh:mm:SS'
          });
          $('#created_atgteqPicker').on("dp.change", function (e) {
              $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
          });
          $('#created_atlteqPicker').on("dp.change", function (e) {
              $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
          });
      });
  </script>


  <div class="form-group">
    <%= f.label :author_username_cont, "Author username contains" %>
    <%= f.text_field :author_username_cont, :class => "form-control", :placeholder => "Author username contains" %>
  </div>

  <div class="form-group">
    <%= f.label :comments_body_cont, "Comments body contains" %>
    <%= f.text_field :comments_body_cont, :class => "form-control", :placeholder => "Comments body contains" %>
  </div>

  <div class="form-group">
    <%= f.label :commenters_followers_username_cont, "Commenters followers username contains" %>
    <%= f.text_field :commenters_followers_username_cont, :class => "form-control", :placeholder => "Commenters followers username contains" %>
  </div>

  <div class="form-group">
    <%= f.label :bookmarkers_followers_username_cont, "Bookmarkers followers username contains" %>
    <%= f.text_field :bookmarkers_followers_username_cont, :class => "form-control", :placeholder => "Bookmarkers followers username contains" %>
  </div>

  <div class="form-group">
    <%= f.label :fans_followers_username_cont, "Fans followers username contains" %>
    <%= f.text_field :fans_followers_username_cont, :class => "form-control", :placeholder => "Fans followers username contains" %>
  </div>

  <div class="form-group">
    <%= f.label :author_followers_username_cont, "Author followers username contains" %>
    <%= f.text_field :author_followers_username_cont, :class => "form-control", :placeholder => "Author followers username contains" %>
  </div>

  <div class="form-group">
    <%= f.label :bookmarkers_username_cont, "Bookmarkers username contains" %>
    <%= f.text_field :bookmarkers_username_cont, :class => "form-control", :placeholder => "Bookmarkers username contains" %>
  </div>

  <div class="form-group">
    <%= f.label :fans_username_cont, "Fans username contains" %>
    <%= f.text_field :fans_username_cont, :class => "form-control", :placeholder => "Fans username contains" %>
  </div>

  <div class="form-group">
    <%= f.label :commenters_username_cont, "Commenters username contains" %>
    <%= f.text_field :commenters_username_cont, :class => "form-control", :placeholder => "Commenters username contains" %>
  </div>


  <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

  <a href="/posts" class="btn btn-outline-secondary btn-block mb-1">Clear filters</a>

<% end %>

