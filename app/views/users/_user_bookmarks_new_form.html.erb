<!-- Form bookmark start -->
<%= form_with(model: @bookmark, local: true) do |f| %>
<!-- Form bookmark end -->

  <!-- Label and input for bookmarker_id start -->
  <!-- Input for bookmarker_id start -->
  <%= f.hidden_field :bookmarker_id, value: @user.id %>
  <!-- Input for bookmarker_id end -->
  <!-- Label and input for bookmarker_id end -->

  <!-- Label and input for post_id start -->
  <div class="form-group">
    <%= f.label :post_id %>

    <!-- Input for post_id start -->
    <%= f.collection_select :post_id, Post.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for post_id end -->
  </div>
  <!-- Label and input for post_id end -->

  <%= f.submit "Create bookmark", class: "btn btn-block btn-outline-secondary" %>
<% end %>
